# use the predefined qt environment
Import('env')

# apply uic to the form
env.Uic4('CP2scope.ui')

# sources:
sources=Split("""
main.cpp
CP2Scope.cpp
PlotInfo.cpp
""")

# libraries:
libs = Split("""
cp2net
cp2lib
cp2config
QtCore
QtGui
QtNetwork
fftw3
fftw3_threads
scopeplot
knob
qwt
""")

# library paths:
libpaths=Split("""
../CP2Net
../CP2Lib
../CP2Config
../Moments
$QTDIR/lib
$QWTDIR/lib
$QTTOOLBOXDIR/designer
$FFTWDIR/lib
""")

# Build cp2scope
cp2scope = env.Program('cp2scope', sources, LIBS=libs, LIBPATH=libpaths)

# install cp2scope
env.InstallBin(cp2scope)
